				            <tr>
				                <td>{{ item[0] }}</td>
				                <td>{{ item[1] }}</td>
								<td>{{ item[2] }}</td>
				            </tr>
						{% endfor %}
		            {% endfor %}
		        </tbody>
		    </table>




















