{% extends "headertoinclude.html.j2" %}



{% block register %}
	<div class ="container">


		<div class="jumbotron">

			<h4>Register</h4>
			<br>

			{% from "_formhelpers.html" import render_field %}
			<form class="form-horizontal" method="post" action="/register/">

				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">First name</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
						{{ render_field(form.firstname, class="form-control", type="text", placeholder="First name...") }}
					</div>
				</div>
				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Last name</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
						{{ render_field(form.lastname, class="form-control", type="text", placeholder="Last name...") }}
					</div>
				</div>
				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Initials</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
						{{ render_field(form.initials, class="form-control", type="text", placeholder="2-3 letters...") }}
					</div>
				</div>
				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Email</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
				{{ render_field(form.email, class="form-control", placeholder="@kth.se", type="email") }}
				</div>
					</div>
				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Password</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
				{{ render_field(form.password, class="form-control", type="password", placeholder="Password...") }}
					</div>
				</div>
				<div class="form-group">
					<label for="inputEmail3" class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Password</label>
					<div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
				{{ render_field(form.confirm, class="form-control", type="password", placeholder="Password...") }}
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">Register</button>
					</div>
				</div>
			</form>

			{% if error %}
				<p class="error"><strong>Error:</strong>{{error}}</p>
			{% endif %}

        </div>
