<body>





    <div class="container">
        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" id="daterader">
                <ul class="list-unstyled">
                    <li style="height: 40px">
                        <h5 class="text-left">Datum</h5>
                    </li>

                    {% for item in scheduleInCourse(varrubrik) %}
                        {% set rowloop = loop %}

                        <li style="height: 40px">
                            {% if item[2] > 9 %}
                                {% if item[3] > 9 %}
                                <p class="text-left">{{ item[1] }}{{ item[2] }}{{ item[3] }}</p>
                                {% endif %}
                                {% if item[3] < 10 %}
                                <p class="text-left">{{ item[1] }}{{ item[2] }}0{{ item[3] }}</p>
                                {% endif %}
                            {% endif %}
                            {% if item[2] < 10 %}
                                {% if item[3] > 9 %}
                                <p class="text-left">{{ item[1] }}0{{ item[2] }}{{ item[3] }}</p>
                                {% endif %}
                                {% if item[3] < 10 %}
                                <p class="text-left">{{ item[1] }}0{{ item[2] }}0{{ item[3] }}</p>
                                {% endif %}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" id="timerader">
                <ul class="list-unstyled">
                    <li style="height: 40px">
                        <h5 class="text-left">Tid</h5>
                    </li>
                    {% for item in scheduleInCourse(varrubrik) %}
                        {% set rowloop = loop %}

                        <li style="height: 40px">
                            {% if item[4] > 9 %}
                            <p class="text-left">kl.{{ item[4] }}-{{ item[5] }}</p>
                            {% endif %}
                            {% if item[4] < 10 %}
                            <p class="text-left">kl.0{{ item[4] }}-{{ item[5] }}</p>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5" id="dragcon">
                <ul class="list-unstyled">
                    <li style="height: 40px">
                        <h5 class="text-left">Innehåll</h5>
                    </li>
                    {% for item in scheduleInCourse(varrubrik) %}
                        {% set rowloop = loop %}

                        <li style="height: 40px">
                            <a href="#" class="text-left" style="overflow: hidden; text-overflow: ellipsis" id="content{{ rowloop.index }}" data-pk="{{ item[7] }}" data-url="/user_edit_content/{{ rowloop.index }}" data-title="Enter username">{{ item[6] }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>


            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3" id="roomsrader">
                <ul class="list-unstyled">
                    <li style="height: 40px">
                        <h5 class="text-left">Sal</h5>
                    </li>
                    {% for item in scheduleInCourse(varrubrik) %}
                        {% set rowloop = loop %}

                        <li style="height: 40px">
                            {% for subitem in roomsOnDate(item[0], varrubrik): %}
                                <button type="button" class="btn btn-success btn-xs" id="room{{ rowloop.index }}{{ loop.index }}b">{{ subitem[0] }}</button>
                            {% endfor %}
                        </li>
                    {% endfor %}
                </ul>
            </div>




            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" id="teacherrader">
                <ul class="list-unstyled">
                    <li style="height: 40px">
                        <h5 class="text-left">Lärare</h5>
                    </li>
                    {% for item in scheduleInCourse(varrubrik) %}
                        {% set rowloop = loop %}

                        <ul class="list-unstyled list-inline" id="Tearow{{ loop.index0 }}" style="height: 40px">

                            {% for subitem in defteachersondate(item[0], varrubrik): %}
                                <li data-x="dest_{{ rowloop.index }}{{ loop.index0 }}" id="dest_{{ rowloop.index }}{{ loop.index0 }}">

                                <a href="#" class="text-left" id="selectteacher{{ rowloop.index }}{{ loop.index0 }}" data-pk="{{ item[7] }}" data-url="/user_edit_teacher/{{ rowloop.index }}{{ loop.index0 }}" data-title="Enter username" data-value="{{ subitem[2] }}">{{ subitem[2] }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>





    <script type="text/javascript">

    

        $(document).ready(function() {
            $.fn.editable.defaults.mode = 'inline';

            $(function  () {
                $("ol").sortable();
                $("#dragcon ul").sortable();
            });

            $('[id^=content]').editable({
                title: 'Select Course'
            });

            var vartech = '[{% for item in teachersInCourse(varrubrik) %}{value: {{ loop.index }}, text: \"{{ item[2] }}\"}{% if not loop.last %}, {% endif %}{% endfor %}]';

            $('[id^=Tearow]').editable({  //to keep track of selected values in multi select
                type: 'checklist',
                mode: 'popup',
                placement: 'right',
                title: 'Select teachers',
                source: vartech
            });

        });
    </script>



</body>

















</html>
